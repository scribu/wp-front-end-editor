#!/bin/bash

mkdir build 2> /dev/null

mkdir css
./lib/less/plessc less/core.less css/editor.css
sqwish css/editor.css -o build/editor.css > /dev/null

cd 'coco'

# main editor code
cat core.co hover.co init.co fields/*.co | coco -cs > '../build/editor.js'

# aloha plugins
for plugin in 'wpSaveCancel' 'wpImage'; do
	dir=../aloha-plugins/$plugin/lib/
	mkdir -p $dir
	cat aloha/$plugin.co | coco -cbs > $dir/$plugin-plugin.js
done

cd ../build
uglifyjs 'editor.js' > 'editor.min.js'
